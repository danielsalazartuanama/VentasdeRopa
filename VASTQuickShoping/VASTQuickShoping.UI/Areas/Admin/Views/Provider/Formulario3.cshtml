@model VASTQuickShoping.Models.Domain.Provider
@{
    ViewBag.Title = "Formulario3";
}

<h2>Formulario3</h2>

@using (Html.BeginForm((string)ViewBag.op, "Provider", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    if (Model != null)
    {
        @Html.HiddenFor(x => x.ProviderID)
    }


<div class="row">
    <div class="form-group col-sm-12">
        <label class="control-label">TELEFONO</label>
        @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(Model => Model.Name)
        </div>
    </div>
</div>
    <div class="row">
        <div class="form-group col-sm-12">
            <label class="control-label">TELEFONO</label>
            @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(Model => Model.Phone)
            </div>
        </div>
    </div>
    <div class="row">

        <div class="form-group col-sm-4">
            <label class="control-label">ESTADO</label>
            @Html.CheckBoxFor(Model => Model.State, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.State)

        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary form-control">Guardar</button>
            <a href="#" class="btn btn-success form-control">Cancelar</a>
        </div>
    </div>
}