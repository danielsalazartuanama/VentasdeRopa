@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}

<h2>DETALLES DE .</h2>


<div>
    <h4>ROLES</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="color:red">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div class="container ">
    <h4 style="color:red">Lista de roles de usuario</h4>
    @if (ViewBag.UserCount == 0)
    {
        <hr />
        <p>No users found in this role.</p>
    }


</div>

<div class="container card">
    <div class="row justify-content-center">
        <div class="col-sm-8">

            <table class="table">

                @foreach (var item in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                    </tr>
                }
            </table>


            <p>
               
                <a href="~/Admin/RolesAdmin/Edit/@Model.Id"><img src="https://img.icons8.com/cute-clipart/35/000000/pencil.png" /></a>
                <a href="~/Admin/RolesAdmin/Index/"><img src="https://img.icons8.com/cute-clipart/35/000000/return.png" /></a>

            </p>
        </div>
    </div>
</div>

