@model VASTQuickShoping.UI.Areas.Admin.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Create";
}




<div class="row  justify-content-center
">

    <div class="col-sm-10 col-md-8 col-lg-6 card" style="background-color:#f1fbfc">
        <div class="text-center border border-light p-5" action="#!">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
                <h4>Crea tu rol.</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                  
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <input type="submit" value="CREAR" class="btn btn-info btn-block my-4" />



            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>





