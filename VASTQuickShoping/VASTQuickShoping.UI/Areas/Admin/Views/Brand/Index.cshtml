@model IEnumerable<VASTQuickShoping.Models.Domain.Brand>
@{
    ViewBag.Title = "Index";

}
@section Misestilos{
    <link href="~/Assets/css/blanco.css" rel="stylesheet" />
}
<br />
<h2>Formulario Marca</h2>
<br />





    <div class="container">
        <div class="row justify-content-end">
            <div class="col-sm-3">

                <a class="btn btn-danger form-control" href="~/admin/brand/insertar">Nuevo</a>
            </div>

        </div>

    </div>


    <br />

    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <table class="table table-stripe table-hover">
                    <thead style=" background-color: #f3c6dc" class="#">
                        <tr>
                            <th style="width:60%;">NOMBRE</th>
                            <th style="width: 40%;"></th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)//item es un objeto por eso lo pongo @item categoria
                        {
                            <tr>
                                <td>@item.Name</td>

                                <td>

                                    <div class="offset-8">
                                        <a href="~/admin/brand/modificar/@item.BrandID"><img src="https://img.icons8.com/cute-clipart/35/000000/pencil.png" /></a>
                                       
                                        <a href="~/admin/brand/eliminar/@item.BrandID" onclick="return confirm('¿Estas seguro de eliminar este registro?')"> <img src="https://img.icons8.com/fluent/35/000000/trash.png" /></a>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


<br />
<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu5" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
        @(ViewBag.state == true ? "Activo":"Inactivo")
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu5">
        <a class="dropdown-item" href="~/admin/brand/index?state=true">Activo</a>
        <a class="dropdown-item" href="~/admin/brand/index?state=false">Inactivo</a>

    </div>
</div>
