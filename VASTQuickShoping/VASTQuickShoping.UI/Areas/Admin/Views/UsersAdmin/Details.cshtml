@model VASTQuickShoping.Models.Identity.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>DETALLES</h2>

<div>
    <h4>USUARIO</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="color:red">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div class="container ">
    <h4 style="color:red">Lista de roles de usuario</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>No roles found for this user.</p>
    }
</div>

<div class="container card">
    <div class="row justify-content-center">
        <div class="col-sm-8">

            <table class=" table table-stripe table-hover">

                @foreach (var item in ViewBag.RoleNames)
                {
                    <tr>
                        <td>
                            @item
                        </td>
                    </tr>
                }

            </table>


            <p>
                <a href="~/Admin/usersadmin/Edit/@Model.Id"><img src="https://img.icons8.com/cute-clipart/35/000000/pencil.png" /></a>
                <a href="~/Admin/usersadmin/Index/"><img src="https://img.icons8.com/cute-clipart/35/000000/return.png" /></a>

            </p>
        </div>
    </div>
</div>






