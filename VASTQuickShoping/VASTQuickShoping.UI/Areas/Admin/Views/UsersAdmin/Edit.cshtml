@model VASTQuickShoping.UI.Areas.Admin.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}


<div class="row  justify-content-center
">

    <div class="col-sm-10 col-md-8 col-lg-6 card" style="background-color:#f1fbfc">
        <div class="text-center border border-light p-5" action="#!">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
                <h4>Editar Usuarios administrativos.</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                   <p>Roles</p>
                   
                    <span class=" col-md-12">
                        @foreach (var item in Model.RolesList)
                        {
                            <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        }
                    </span>
                </div>
                <!-- Sign in button -->

                <input type="submit" value="GUARDAR" class="btn btn-info btn-block my-4" />
            
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>












