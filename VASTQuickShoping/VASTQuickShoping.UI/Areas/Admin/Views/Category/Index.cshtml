@model IEnumerable<VASTQuickShoping.Models.Domain.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-sm-4">
        <a class="btn btn-danger form-control" href="~/admin/category/insertar">Nuevo</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-stripe table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width:40%;">NOMBRE</th>
                    <th style="width: 50%;">DESCRIPCION</th>
                    <th style="width: 10%;"></th>
                   

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)//item es un objeto por eso lo pongo @item categoria
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Descripcion</td>
                    <td>
                        <a href="~/admin/category/modificar/@item.CategoryID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true" >Editar</span></a>
                        <a href="~/admin/category/eliminar/@item.CategoryID" class="btn btn-sm btn-success" onclick="return confirm('¿Estas seguro de eliminar este registro?')">Eliminar</a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

