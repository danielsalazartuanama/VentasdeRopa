@model VASTQuickShoping.Models.Domain.Department
@{
    ViewBag.Title = "Formulario4";
}
<br />
<br />
<h2>GÉNERO</h2>


@using (Html.BeginForm((string)ViewBag.op, "Department", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    if (Model != null)
    {
        @Html.HiddenFor(x => x.DepartmentID)
    }

    <br />
    <br />
    <div class="card-body z-depth-2 px-4 col-sm-6">

        <div class="row">
            <div class="form-group col-sm-8">
                <label class="control-label">NOMBRE</label>
                @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
                <div class="text-danger">
                    @Html.ValidationMessageFor(Model => Model.Name)
                </div>
            </div>

            <div class="form-group col-sm-4">
                <label class="control-label">ESTADO</label>
                @Html.CheckBoxFor(Model => Model.State, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.State)

            </div>
        </div>


        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary form-control">Guardar</button>
                    <a href="#" class="btn btn-success form-control">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}

